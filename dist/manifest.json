{
    "manifest_version": 2,
    "name": "自由跳转",
    "description": "微博，知乎，简书等网站外链自由跳转",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/backgroundPage.js"],
        "persistent": false
    },
    "icons": {
        "16": "icon16.png",
        "19": "icon19.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["http://t.cn/*"],
            "js": ["js/contentScript.js"]
        },
        {
            "matches": ["https://*.zhihu.com/*"],
            "js": ["js/zhihu.js"]
        },
        {
            "matches": ["https://www.jianshu.com/*"],
            "js": ["js/jianshu.js"]
        },
        {
            "matches": ["https://weibo.com/*"],
            "js": ["js/weibo.js"]
        }
    ],
    "permissions": ["http://api.t.sina.com.cn/*", "storage"]
}
